
# POWERHOUSE Environment Variables (all prefixed with PH_*)

# Database
PH_DB_URL=postgresql://user:password@localhost:5432/powerhouse

# JWT & Auth
PH_JWT_ISSUER=powerhouse.enterprise
PH_JWT_SECRET=your_jwt_secret_here_min_32_chars

# SSO & Enterprise Auth
PH_ENABLE_SSO=true
PH_SAML_ENTITY_ID=powerhouse
PH_SAML_CERT_PATH=/path/to/saml/cert.pem

# Runtime Configuration
PH_RUNTIME_MODE=pro
PH_MAX_CONCURRENT_EXECUTIONS=100
PH_SANDBOX_KEY=your_sandbox_encryption_key

# Governance & Audit
PH_ENABLE_AUDIT_LOGS=true
PH_AUDIT_LOG_RETENTION_DAYS=365
PH_ENABLE_CERTIFICATION=true

# Policies
PH_DEFAULT_CPU_LIMIT=4
PH_DEFAULT_MEM_MB=8192
PH_DEFAULT_TIMEOUT_S=3600

# Telemetry
PH_TELEMETRY_ENDPOINT=https://telemetry.powerhouse.enterprise
PH_TELEMETRY_API_KEY=your_telemetry_api_key

# Integration (optional)
PH_ENABLE_DRACANUS_DEPLOY=false
PH_DRACANUS_API_URL=https://api.dracanus.app
PH_DRACANUS_API_KEY=your_dracanus_api_key

# Feature Flags
PH_ENABLE_PRIVATE_CATALOG=true
PH_ENABLE_SBOM_GENERATION=true
PH_ENABLE_INCIDENT_MANAGEMENT=true
