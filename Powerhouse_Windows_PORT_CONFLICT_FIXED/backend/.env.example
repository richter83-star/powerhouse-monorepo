
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/powerhouse_db

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Providers
# OpenAI
OPENAI_API_KEY=your-openai-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-key

# Cohere
COHERE_API_KEY=your-cohere-key

# Default LLM Provider (openai, anthropic, cohere)
DEFAULT_LLM_PROVIDER=openai

# Kafka Configuration
ENABLE_KAFKA=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_OUTCOME_TOPIC=agent-outcomes
KAFKA_METRICS_TOPIC=agent-metrics
KAFKA_ALERTS_TOPIC=agent-alerts
KAFKA_BATCH_SIZE=100
KAFKA_LINGER_MS=100
KAFKA_COMPRESSION=gzip
KAFKA_MAX_RETRIES=3

# Feedback Pipeline
ENABLE_OUTCOME_LOGGING=true

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
